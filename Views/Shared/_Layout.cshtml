<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] | Qotos</title>
	<link rel="icon" type="image/x-icon" href="/images/q-icon.ico">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="/css/style.css">
	<!-- Css -->
	@RenderSection("css", required: false)
	<!-- Css -->
</head>

<body>
	<!-- Navbar -->
	@await Html.PartialAsync("_NavbarPartial")
	<!-- /Navbar -->
	<!-- Content -->
	@RenderBody()
	<!-- Content -->
	<!-- Modal -->
	<div class="modal fade modal-xl" id="viewPictureModal" tabindex="-1" aria-labelledby="exampleModalLabel"
		 aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<a class="p-0 me-auto link-dark text-decoration-none" href="#" id="authorProfile">
						<img style="width: 32px; height: 32px; object-fit: cover" class="rounded-circle"
							 src="https://media.flixcar.com/delivery/static/inpage/9/images/loading.gif" alt="" id="authorThumbnail" />
						<span class="fw-bold" id="authorUserName">q5nguyenn</span>
					</a>
					<div class="d-flex">
						<button class="btn btn-outline-secondary me-2 btn-like" data-url="" id="photoLike">
							<i class="bi bi-heart-fill"></i>
						</button>
						@* <button class="btn btn-outline-secondary btn-collection me-2" data-url="" id="photoCollection"><i
						class="bi bi-plus-square"></i></button> *@
						<button class="btn btn-outline-secondary me-2 btn-download" data-url="" id="photoDownload">
							<i class="bi bi-download"></i>
							Download
						</button>
					</div>
					<button type="button" class="btn-close ms-0" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="text-center">
						<img class="h-100 rounded" src="https://media.flixcar.com/delivery/static/inpage/9/images/loading.gif"
							 alt="Card image" id="photoThumbnail" />
					</div>
					<div class="d-flex align-items-center mt-3">
						<div class="me-3">
							<div class="text-secondary">Lượt xem</div>
							<div id="photoViewCount">0</div>
						</div>
						<div class="me-3">
							<div class="text-secondary">Tải xuống</div>
							<div id="photoDownloadCount">0</div>
						</div>
						<div class="me-auto">
							<div class="text-secondary">Like</div>
							<div id="photoLikeCount">0</div>
						</div>
						<button class="btn btn-outline-secondary me-2"><i class="bi bi-share"></i> Chia sẻ</button>
						<button class="btn btn-outline-secondary"><i class="bi bi-flag"></i> Báo cáo</button>
					</div>
					<div class="text-secondary my-3">
						<i class="bi bi-calendar-event"></i> Chia sẻ <span id="photoPublish">
							0 ngày
							trước
						</span>
					</div>
					<div class="d-flex flex-wrap" id="photoTags">
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
	<!-- /Modal -->
	<!-- Modal Collection -->
	<div class="modal fade modal-lg" id="collectionModal" tabindex="-1" aria-labelledby="exampleModalLabel"
		 aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<div class="row">
						<div class="col-4 overflow-hidden">
							<img class="rounded-start" id="collectionName" name="collectionName"
								 src="https://ps.w.org/kama-thumbnail/assets/icon-256x256.png?rev=2836004" alt="">
						</div>
						<div class="col-8">
							<form id="formAddCollection">
								<div class="mb-3">
									<label for="editLocation" class="form-label">Thêm album</label>
									<div class="d-flex">
										<input type="text" class="form-control me-2" id="editLocation" name="editLocation">
										<button type="submit" class="btn btn-secondary">Thêm</button>
									</div>
								</div>
							</form>
							<div id="collectionsResult">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /Modal Collection-->
	<!-- Footer -->
	@await Html.PartialAsync("_FooterPartial")
	<!-- /Footer -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
	<script type="module" src="/js/main.js"></script>
	<!-- Script -->
	@RenderSection("js", required: false)
	<!-- Script -->
</body>

</html>
