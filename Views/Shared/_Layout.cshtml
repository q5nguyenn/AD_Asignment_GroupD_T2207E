<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Qotos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Qotos</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <form class="d-flex m-0 w-100" asp-controller="Photos" asp-action="Tag" method="get">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="keyword" />
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex-shrink-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Khám phá</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Accounts" asp-action="Login">Đăng nhập</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link p-0"
                href="#"
                id="navbarDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <div class="">
                  <img
                    style="width: 50px; height: 50px; object-fit: cover"
                    class="rounded-circle"
                    src="https://images.unsplash.com/photo-1631947430066-48c30d57b943?q=80&w=1916&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                    alt=""
                  />
                </div>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="#">Hồ sơ của bạn</a></li>
                <li><a class="dropdown-item" href="#">Số liệu thống kê</a></li>
                <li><a class="dropdown-item" href="#">Cài đặt tài khoản</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="#">Đăng xuất</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- /Navbar -->

@RenderBody()

    <!-- Modal -->
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Launch demo modal
    </button>

    <!-- Modal -->
    <div
      class="modal fade modal-xl"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <div class="p-0 me-auto">
              <img
                style="width: 32px; height: 32px; object-fit: cover"
                class="rounded-circle"
                src="https://images.unsplash.com/photo-1596245195341-b33a7f275fdb?w=500&amp;auto=format&amp;fit=crop&amp;q=60&amp;ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fGdpcmx8ZW58MHx8MHx8fDA%3D"
                alt=""
              />
              <span class="fw-bold">Nguyễn Văn Quý</span>
            </div>
            <div class="d-flex">
              <button class="btn btn-outline-secondary me-2"><i class="bi bi-heart-fill"></i></button>
              <button class="btn btn-outline-secondary me-2"><i class="bi bi-plus-square"></i></button>
              <button class="btn btn-outline-secondary me-2"><i class="bi bi-download"></i> Download</button>
            </div>
            <button type="button" class="btn-close ms-0" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="text-center">
              <img
                class="h-100"
                src="https://images.unsplash.com/photo-1596434300655-e48d3ff3dd5e?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTR8fGdpcmx8ZW58MHx8MHx8fDA%3D"
                alt="Card image"
              />
            </div>
            <div class="d-flex align-items-center">
              <div class="me-3">
                <div class="text-secondary">Lượt xem</div>
                <div>99,999</div>
              </div>
              <div class="me-3">
                <div class="text-secondary">Tải xuống</div>
                <div>99,999</div>
              </div>
              <div class="me-auto">
                <div class="text-secondary">Like</div>
                <div>99,999</div>
              </div>
              <button class="btn btn-outline-secondary me-2"><i class="bi bi-share"></i> Chia sẻ</button>
              <button class="btn btn-outline-secondary"><i class="bi bi-flag"></i> Báo cáo</button>
            </div>
            <div class="text-secondary my-3"><i class="bi bi-calendar-event"></i> Chia sẻ 2 ngày trước</div>
            <div class="d-flex flex-wrap">
              <button class="btn btn-secondary me-2">Valentine</button>
              <button class="btn btn-secondary me-2">Happy new year</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <!-- /Modal -->
  </body>
</html>
